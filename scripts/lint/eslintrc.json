{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "extends": [
    "airbnb-base/legacy",
    "prettier"
  ],
  "plugins": ["jest", "prettier"],
  "env": {
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "logger": true
  },
  "rules": {
    "prettier/prettier": "error",
    "func-names": "off"
  }
}
